<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/selected_stock_item_width"
        android:layout_height="match_parent"
        android:gravity="center|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvStockNameGLI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浦发银行" />

        <TextView
            android:id="@+id/tvStockCodeGLI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600989" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPriceNewGLI"
        android:layout_width="@dimen/selected_stock_item_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="98.90" />

    <TextView
        android:id="@+id/tvQuoteChangeGLI"
        android:layout_width="@dimen/selected_stock_item_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="98.90" />

    <TextView
        android:id="@+id/tvBuySellPointGLI"
        android:layout_width="@dimen/selected_stock_item_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="98.90" />

    <TextView
        android:id="@+id/tvHoldLineGLI"
        android:layout_width="@dimen/selected_stock_item_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="98.90" />

    <TextView
        android:id="@+id/tvValueAnalysisGLI"
        android:layout_width="@dimen/selected_stock_item_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="98.90" />

    <TextView
        android:id="@+id/tvStockAnalysisGLI"
        android:layout_width="@dimen/selected_stock_item_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="98.90" />

    <TextView
        android:id="@+id/tvRiseAndFallGLI"
        android:layout_width="@dimen/selected_stock_item_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="98.90" />

    <TextView
        android:id="@+id/tvHandTurnoverRateGLI"
        android:layout_width="@dimen/selected_stock_item_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="98.90" />

    <TextView
        android:id="@+id/tvTotalMarketCapitalizationGLI"
        android:layout_width="@dimen/selected_stock_item_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="98.90" />

</LinearLayout>