<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recycler_view_enter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zpf.animmenu.RecyclerViewEnterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_enter_anim"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="item进入动画"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_count_switch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="RecyclerView单双列切换"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_circle_refresh"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="圆圈水滴加载、List单项拖动、横滑删除"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_recycler_snap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="RecyclerView_snap"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_recycler_horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="RecyclerView横滑删除"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_recycler_head_foot"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="RecyclerView添加head/foot"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_recycler_load_more"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="Rv_loadMore_ItemClick"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_recycler_swipe_press"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="滑动删除、拖动排序"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_recycler_prize"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="中奖信息滚动展示"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_rv_pull_up"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="08dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="下拉回弹横滑删除"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_full_list_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="08dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="展开收缩分组列表"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_chat_act"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="08dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="聊天页面弹键盘"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_group_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="08dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="Rv顶部悬浮"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btnTanTanCard"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="08dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="探探卡片"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btnGridList"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="08dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_corners"
            android:text="横滑网格列表"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</ScrollView>
