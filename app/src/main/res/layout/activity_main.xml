<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9961C5FE"
    tools:context="com.example.zpf.animmenu.MainActivity">

    <RelativeLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="24dp">

        <ImageView
            android:id="@+id/menu_1"
            style="@style/MenuItemStyle"
            android:contentDescription="@null"
            android:src="@mipmap/ic_accessibility_black_48dp"
            android:tint="@color/colorWhite"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/menu_2"
            style="@style/MenuItemStyle"
            android:contentDescription="@null"
            android:src="@mipmap/ic_accessible_black_48dp"
            android:tint="@color/colorWhite"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/menu_3"
            style="@style/MenuItemStyle"
            android:contentDescription="@null"
            android:src="@mipmap/ic_account_balance_wallet_black_48dp"
            android:tint="@color/colorWhite"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/menu_4"
            style="@style/MenuItemStyle"
            android:contentDescription="@null"
            android:src="@mipmap/ic_account_box_black_48dp"
            android:tint="@color/colorWhite"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/menu_5"
            style="@style/MenuItemStyle"
            android:contentDescription="@null"
            android:src="@mipmap/ic_account_balance_black_48dp"
            android:tint="@color/colorWhite"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/menu_switch"
            style="@style/MenuItemStyle"
            android:contentDescription="@null"
            android:src="@mipmap/ic_3d_rotation_black_48dp"
            android:tint="@color/colorWhite" />

    </FrameLayout>


</FrameLayout>
